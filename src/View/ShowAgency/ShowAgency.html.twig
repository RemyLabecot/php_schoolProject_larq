<div id="themes" class=container-fluid">
    <div id="agencies" class="container padd">
        <div class="row" style="padding-bottom:5%">
            <div class="col">
                <div class="text-center">
                    <h3><strong>Nos Agences</strong></h3>
                </div>
            </div>
        </div>
        <div class="row no-gutters">
            {% for agency in agencies %}
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"><strong>{{ agency.agency }}</strong></h4>
                            <hr>
                            <p class="card-text">{{ agency.address }}</p>
                            <p class="card-text">{{ agency.zipcode }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% extends "layout.html.twig" %}
{% block title %}Login{% endblock %}
{% block content %}
    <div class="container login">
        <div class="row justify-content-center">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Identifiez-vous pour continuer</strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST">
                            <fieldset>
                                {% if errors is not empty %}
                                <div class="errors">{{ errors }}</div>
                                {% endif %}
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-user"></i>
                    </span>
                                                <input class="form-control" placeholder="Identifiant"
                                                       name="login"
                                                       type="text" autofocus>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                    <span class="input-group-addon">
                      <i class="glyphicon glyphicon-locker"></i>
                    </span>
                                                <input class="form-control" placeholder="Mot de passe"
                                                       name="password"
                                                       type="password" autofocus>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg button-wexy btn-block"
                                                   value="Valider">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
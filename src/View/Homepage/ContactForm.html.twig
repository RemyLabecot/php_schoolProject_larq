{% extends "/layout.html.twig" %}

{% block title %}Formulaire de contact{% endblock %}

{% block content %}
    <div class="container form-container">
        <div class="row">
            <div class="col-12 text-center">
                <h1>Contactez-nous</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 mx-auto">
                <form action="" method="POST">
                    <div class="form-group">
                        <label for="lastname">Nom :</label>
                        <input type="text" required class="form-control" id="lastname" name="lastname">
                        {{ formErrors.errLastname.0 }}
                    </div>
                    <div class="form-group">
                        <label for="firstname">Prénom :</label>
                        <input type="text" required class="form-control" id="firstname" name="firstname">
                        {{ formErrors.errFirstname.0 }}
                    </div>
                    <div class="form-group">
                        <label for="mail">e-mail :</label>
                        <input type="email" required class="form-control" id="mail" name="mail">
                        {{ formErrors.errMail.0 }}
                    </div>
                    <div class="form-group">
                        <label for="message">Message :</label>
                        <textarea id="message" required class="form-control" name="message"></textarea>
                        {{ formErrors.errMessage.0 }}
                    </div>
                    {{ formErrors.success.0 }}
                    <div class="button rounded mx-auto md-block">
                        <button type="submit" class="btn btn-outline-dark btn-lg btn-block" name="submit">Envoyer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
